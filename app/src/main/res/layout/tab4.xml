<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTab4_Profile"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="PROFILE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTab4_EmailTitle"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:text="EMAIL:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTab4_Email"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textEmailSubject" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTab4_PhoneTitle"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:text="PHONE:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTab4_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTab4_NameTitle"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:text="NAME:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTab4_Name"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTab4_PasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CHANGE PASSWORD:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnTab4_ChangePassword"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_revert" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTab4_SignOut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SIGN OUT" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="BORROWING BOOKS:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvTab4_BorringBook"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>